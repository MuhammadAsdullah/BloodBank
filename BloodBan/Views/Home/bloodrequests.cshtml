        <font style=" padding:3px;font-family:cursive;font-size:20px"> Total Requests =@ViewBag.size </font>

    </div>

    <div style="background-color: white;margin: auto; width: 60%;">

        
            @foreach (BloodBan.Models.bloodrequest u in Model)
            {
                    <div style="height:130px;margin: auto; width: 90%;background-color:#E5E4E1">
                        <div style="float: left">
                            <font color="black" size="3px" style="font-family: cursive">for Blood is urgently required.</font><br><br>
